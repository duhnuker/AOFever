{
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext", 
      "moduleResolution": "NodeNext", 
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "sourceMap": true
    },
    "ts-node": {
      "esm": true, 
      "experimentalSpecifierResolution": "node"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }